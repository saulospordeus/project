
<%= form_with model: [@plan, @offer] do |f| %>
  <%= f.label :description, 'Descrição' %>
  <%= f.text_field :description %>
  <%= f.label :value, 'Valor por hora' %>
  <%= f.text_field :value %>
  <%= f.label :hours, 'Horas' %>
  <%= f.text_field :hours %>
  <%= f.label :finish_date, 'Data final' %>
  <%= f.text_field :finish_date %>  
  <%= f.submit 'Ofertar' %>
<% end %>