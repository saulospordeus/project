<h1>Edite seu perfil</h1>
<%= form_with(model: @profile) do |f| %>
  <h4><%= f.label :name, 'Nome:' %></h4>
  <p><%= f.text_field :name %></p>
  <h4><%= f.label :social_name, 'Nome Social:' %></h4>
  <p><%= f.text_field :social_name %></p>
  <h4><%= f.label :background, 'Formação:' %></h4>
  <p><%= f.text_field :background %></p>
  <h4><%= f.label :description, 'Descrição:' %></h4>
  <p><%= f.text_field :description %></p>
  <h4><%= f.label :area, 'Área:' %></h4>
  <p><%= f.text_field :area %></p>
  <p><%= f.submit 'Enviar:' %></p>
<% end %>
<input type="button" value="Voltar" onClick="history.go(-1)"> 
